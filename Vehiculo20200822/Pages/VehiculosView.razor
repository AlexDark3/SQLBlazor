@page "/vehicles"

@using Data.Models
//Language: English\\
<PageTitle>Vehicle Registration</PageTitle>
<h1>Vehicle Registration</h1>


<h2><label>Type of Vehicle</label></h2>
<div class="box">
    <input class="form-control" type="text">
</div>
<h2><label> Brand </label></h2>
<input class= "form-control" type = "text" >
<div class= "box" ></div>

<h2><label> Model </label></h2>
<input class= "form-control" type = "text" >
<div class= "box" ></div>

<h2><label> Year </label ></h2>
<input class= "form-control" type = "number" >
<div class= "box"></div>

<h2><label> Color </label></h2>
<input class= "form-control" type = "text">
<div class= "box" ></div>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Color</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Vehiculos)
        {
            <tr>
                <th>@vehiculo.Id</th>
                <th>@vehiculo.Brand</th>
                <th>@vehiculo.Model</th>
                <th>@vehiculo.Color</th>
                <th>@vehiculo.Year</th>
            </tr>
        }
    </tbody>
</table>

@code {
    public List<Vehicle> Vehiculos { get; set; } = new List<Vehicle>();

    protected async override Task OnInitializedAsync()
    {
        Vehiculos = await VehicleService.Consultar();
    }
}